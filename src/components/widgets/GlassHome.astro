---
import { getCollection } from 'astro:content';

const postsAll = await getCollection('post');

const posts = postsAll
  .filter((p) => !p.data.draft)
  .sort((a, b) => {
    const da = a.data.publishDate ? new Date(a.data.publishDate).getTime() : 0;
    const db = b.data.publishDate ? new Date(b.data.publishDate).getTime() : 0;
    return db - da;
  });

const latest = posts.slice(0, 6);

const categories = Array.from(
  new Set(
    posts
      .map((p) => (p.data.category || '').trim())
      .filter(Boolean)
  )
).sort((a, b) => a.localeCompare(b));

const slugFrom = (entry) => {
  const s = entry.slug ?? entry.id ?? '';
  return s.replace(/\\/g, '/').split('/').pop().replace(/\.(md|mdx)$/i, '');
};
---

<section class="relative">
  <!-- Glass background blobs -->
  <div class="pointer-events-none absolute inset-0 overflow-hidden">
    <div class="absolute -top-32 -left-32 h-96 w-96 rounded-full blur-3xl opacity-30 bg-gradient-to-br from-white to-slate-300 dark:from-slate-700 dark:to-slate-900"></div>
    <div class="absolute top-24 -right-40 h-[32rem] w-[32rem] rounded-full blur-3xl opacity-30 bg-gradient-to-br from-sky-200 to-indigo-200 dark:from-sky-900 dark:to-indigo-900"></div>
  </div>

  <div class="relative mx-auto max-w-6xl px-4 py-12 sm:py-16">
    <!-- Hero glass card -->
    <div class="rounded-3xl border border-white/30 bg-white/40 p-6 shadow-lg backdrop-blur-xl dark:border-white/10 dark:bg-slate-900/40 sm:p-10">
      <div class="flex flex-col gap-6 md:flex-row md:items-end md:justify-between">
        <div>
          <p class="text-sm font-semibold opacity-80">QingTaoRS Devlog</p>
          <h1 class="mt-2 text-3xl font-bold tracking-tight sm:text-5xl">
            Build notes, bugs, and progress —<br class="hidden sm:block" />
            in a glass-style blog.
          </h1>
          <p class="mt-4 max-w-2xl opacity-80">
            I write about project progress, debugging notes, and what I learned. Posts are grouped by categories for fast browsing.
          </p>

          <div class="mt-6 flex flex-wrap gap-3">
            <a
              class="rounded-xl border border-white/30 bg-white/40 px-4 py-2 text-sm font-medium backdrop-blur-md hover:bg-white/60 dark:border-white/10 dark:bg-slate-900/40 dark:hover:bg-slate-900/60"
              href="/blog"
            >
              Browse all posts
            </a>
            <a
              class="rounded-xl border border-white/30 bg-white/40 px-4 py-2 text-sm font-medium backdrop-blur-md hover:bg-white/60 dark:border-white/10 dark:bg-slate-900/40 dark:hover:bg-slate-900/60"
              href="/category"
            >
              Categories
            </a>
          </div>
        </div>

        <div class="rounded-2xl border border-white/30 bg-white/30 p-4 backdrop-blur-md dark:border-white/10 dark:bg-slate-900/30">
          <div class="text-sm opacity-80">Quick stats</div>
          <div class="mt-2 flex gap-6">
            <div>
              <div class="text-2xl font-bold">{posts.length}</div>
              <div class="text-xs opacity-70">posts</div>
            </div>
            <div>
              <div class="text-2xl font-bold">{categories.length}</div>
              <div class="text-xs opacity-70">categories</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Category chips -->
      <div class="mt-8">
        <div class="text-sm font-semibold opacity-80">Categories</div>
        <div class="mt-3 flex flex-wrap gap-2">
          {categories.length === 0 ? (
            <span class="text-sm opacity-70">No categories yet.</span>
          ) : (
            categories.map((c) => (
              <a
                class="rounded-full border border-white/30 bg-white/30 px-3 py-1 text-sm backdrop-blur-md hover:bg-white/60 dark:border-white/10 dark:bg-slate-900/30 dark:hover:bg-slate-900/60"
                href={`/category/${encodeURIComponent(c)}`}
              >
                {c}
              </a>
            ))
          )}
        </div>
      </div>
    </div>

    <!-- Latest posts -->
    <div class="mt-10">
      <div class="flex items-end justify-between">
        <h2 class="text-xl font-bold">Latest posts</h2>
        <a class="text-sm underline opacity-80 hover:opacity-100" href="/blog">View all</a>
      </div>

      <div class="mt-4 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        {latest.map((p) => (
          <a
            class="group rounded-2xl border border-white/30 bg-white/40 p-5 shadow-sm backdrop-blur-xl transition hover:bg-white/60 dark:border-white/10 dark:bg-slate-900/40 dark:hover:bg-slate-900/60"
            href={`/blog/${slugFrom(p)}`}
          >
            <div class="text-xs opacity-70">
              {p.data.publishDate ? new Date(p.data.publishDate).toISOString().slice(0, 10) : ''}
              {p.data.category ? <span> · {p.data.category}</span> : null}
            </div>
            <div class="mt-2 text-lg font-semibold group-hover:underline">{p.data.title}</div>
            {p.data.excerpt ? <div class="mt-2 text-sm opacity-80">{p.data.excerpt}</div> : null}
          </a>
        ))}
      </div>
    </div>
  </div>
</section>
