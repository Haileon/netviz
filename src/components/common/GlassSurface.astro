
---
const {
  class: className = '',
  max = 'max-w-6xl',         // change to max-w-5xl / max-w-7xl if you like
  padding = 'px-4 sm:px-6',  // page horizontal padding
  y = 'py-8 md:py-10',       // vertical spacing
} = Astro.props;
---

<div class:list={['mx-auto', max, padding, y]}>
  <div
    class:list={[
      'rounded-3xl border border-white/30 bg-white/40 shadow-lg backdrop-blur-xl',
      'dark:border-white/10 dark:bg-slate-900/40',
      'p-6 sm:p-10',
      className,
    ]}
  >
    <slot />
  </div>
</div>
